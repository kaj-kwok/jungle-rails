<section class="admin-categories-index">

  <header class="page-header">
    <h1>Admin &raquo; All Categories</h1>
  </header>
  <div class="well">
    <%= link_to "+ New Category", new_admin_category_path, class: "btn btn-info" %>
  </div>
  <div class="panel panel-default products">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th style="width: 75%">Categories</th>
          <th style="width: 20%">Number of Products</th>
        </tr>
          
      </thead>
      <tbody>
        <% @categories.each do | category|%>
        <tr>
          <td>
          <%= category.name %>
          </td>
          <td>
          <%= category.number_of_products %>
          </td>
          <td>
          <%= link_to fa_icon('trash'), [:admin, category], class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: "Are you sure?" } %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</section>